# move focused container to workspace
bindsym $win+Shift+0 move container to workspace $tag0
bindsym $win+Shift+1 move container to workspace $tag1
bindsym $win+Shift+2 move container to workspace $tag2
bindsym $win+Shift+3 move container to workspace $tag3
bindsym $win+Shift+4 move container to workspace $tag4
bindsym $win+Shift+5 move container to workspace $tag5
bindsym $win+Shift+6 move container to workspace $tag6
bindsym $win+Shift+7 move container to workspace $tag7
bindsym $win+Shift+8 move container to workspace $tag8
bindsym $win+Shift+9 move container to workspace $tag9

# move to next workspace
bindsym $win+Mod1+Left workspace prev
bindsym $win+Mod1+Right workspace next

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 1 px or 1 ppt
        bindsym Down resize grow height 1 px or 1 ppt
        bindsym Up resize shrink height 1 px or 1 ppt
        bindsym Right resize grow width 1 px or 1 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    colors {
          background #3f3f3f
          statusline #ffffff
           separator #666666

                              #border backgnd forgrnd
           focused_workspace   #7c65ab #7c65ab #ffffff
            active_workspace   #333333 #5f676a #ffffff
	        inactive_workspace   #3f3f3f #3f3f3f #888888
      	    urgent_workspace   #aa0000 #990000 #ffffff
    }

    position top
    status_command i3status -c ~/.config/i3/i3status.conf
    strip_workspace_numbers yes
}

# Colors          #border backgnd forgrnd
client.focused    #7c65ab #7c65ab #ffffff
client.unfocused  #3f3f3f #3f3f3f #ffffff
client.urgent     #aa0000 #990000 #ffffff

# Multimedia Keys
# Increase Volume
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q set Master 5%+ unmute
# decrease volume
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q set Master 5%- unmute
# mute volume
bindsym XF86AudioMute exec --no-startup-id amixer -q set Master toggle
# pause / play / next / previous
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# Backlight Control Keys
# increase backlight
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5
# decrease backlight
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5

# Resolutions
# 3840x2160
bindsym $win+o exec --no-startup-id xrandr --output eDP1 --mode 3840x2160
# 1920x1080
bindsym $win+p exec --no-startup-id xrandr --output eDP1 --mode 1920x1080

# Monitor Support
# Enable/Disable External Monitor
bindsym $win+i exec --no-startup-id ~/.config/i3/monswitch.sh
# Enable/Disable Primary Monitor
bindsym $win+u exec --no-startup-id ~/.config/i3/stoggle.sh
